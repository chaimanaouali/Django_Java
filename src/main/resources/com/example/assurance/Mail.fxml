<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@mail.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assurance.Mail">
    <children>
        <!-- Title -->
        <Label text="Confirmation Email" layoutX="14.0" layoutY="14.0" styleClass="title"/>

        <!-- Message -->
        <Label text="Message:" layoutX="14.0" layoutY="50.0" styleClass="label"/>
        <TextArea fx:id="messageArea" layoutX="14.0" layoutY="80.0" prefHeight="200.0" prefWidth="572.0" styleClass="text-area" />

        <!-- Subject -->
        <Label text="Subject:" layoutX="14.0" layoutY="300.0" styleClass="label"/>
        <TextField fx:id="subjectField" layoutX="14.0" layoutY="320.0" prefHeight="26.0" prefWidth="572.0" styleClass="text-field" />

        <!-- To -->
        <Label text="To:" layoutX="14.0" layoutY="360.0" styleClass="label"/>
        <TextField fx:id="toField" layoutX="14.0" layoutY="380.0" prefHeight="26.0" prefWidth="572.0" styleClass="text-field" />

        <!-- Send Button -->
        <Button fx:id="btn" layoutX="14.0" layoutY="420.0" mnemonicParsing="false" onAction="#sendEmail" prefHeight="26.0" prefWidth="572.0" styleClass="button" text="Send" />
    </children>
</AnchorPane>
