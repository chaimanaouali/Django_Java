<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.django2.ChatbotPopupController">
    <VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="10" style="-fx-background-color: #37619B;">
      <ImageView fitHeight="86.0" fitWidth="148.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../image/chatbot.png" />
         </image>
      </ImageView>
        <TextArea fx:id="chatArea" editable="false" prefHeight="263.0" prefWidth="600.0" wrapText="true" />
        <HBox alignment="CENTER" prefWidth="500" spacing="10">
            <TextField fx:id="userInputField" prefWidth="400" promptText="Type your message here..." />
            <Button fx:id="sendButton" onAction="#sendMessage" text="Send" />
            <Button onAction="#onClose" text="Quit" />
        </HBox>
        <VBox fx:id="buttonBox" alignment="CENTER" prefWidth="500" spacing="10" />
    </VBox>
</AnchorPane>
