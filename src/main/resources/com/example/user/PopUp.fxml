<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300" prefWidth="400" style="-fx-background-color: #37619B;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.user.CommentPopupController">
    <VBox alignment="CENTER" prefHeight="76.0" prefWidth="400.0">
        <children>
            <ImageView fitHeight="51.0" fitWidth="97.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../../images/comments.png" />
                </image>
            </ImageView>
        </children>
    </VBox>
    <ListView fx:id="commentListView" prefHeight="253.0" prefWidth="400" />
    <Button layoutX="4.0" onAction="#addComment" prefHeight="48.0" prefWidth="63.0" style="-fx-background-color: #bfdfff; -fx-text-fill: white;">
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../../images/add.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
</VBox>
